{ 
    "title"                 : "Context",
    "description"           : "A content management development framework.",
    "domain"                : "context.thoughtpivot.com",
    "temp"                  : "/tmp",
    "photos"                : "/tmp",
    "videos"                : "/tmp",
    "encoding"              : "UTF-8",
    "subtract_day_range"    : 190,
    "stylesheet"            : "context.css",

    "hypnotoad" :
    {
        "listen"    : ["http://*:3233", "https://*:3244"],
        "pid_file"  : "/tmp/context.pid",
        "lock_file" : "/tmp/context.lock",
        "log_file"  : "/tmp/context.log",
        "workers"   : "25",
        "proxy"     : 1
    },
    
    "authorization" :
    {

        "enabled" : ["local_mode"],

        "google_apps" :
        
        {
            "domain"    : "thoughtpivot.com"
        },
        "local_mode" :
        {
            "domain"    : "localhost"
        } 
    },

    "content" :
    {
        "layouts" :
        {
            "enabled" : ["context"],
            
            "context" :
            {
                "title"         : "context",
                "stylesheet"    : "/context.css"
            }
        },
        
        "views" :            
        {
            
            "enabled" : ["articles", "files", "photos", "videos"],
            
            "articles" :
            {   
                "title" : "Articles",
                "url"   : "/articles",
                "tags"  : ["article", "key=value"],
                "order_by"  : "create_datetime ASC",
                "template" : "content"
            },
            "files" :
            {   
                "title" : "Files",
                "url"   : "/files",
                "tags"  : ["file", "key=value"],
                "order_by"  : "create_datetime ASC",
                "template" : "content"
            },
            "photos" :
            {   
                "title" : "Photos",
                "url"   : "/photos",
                "tags"  : ["photo", "key=value"],
                "order_by"  : "create_datetime ASC",
                "template" : "content"
            },
            "videos" :
            {   
                "title" : "Videos",
                "url"   : "/videos",
                "tags"  : ["video", "key=value"],
                "order_by"  : "create_datetime ASC",
                "template" : "content"
            }
        }
    },
    
    "mapping" :
    {
        "enabled" : ["articles", "files"],
        
        "articles" :            
        {
            "tags"  : ["people"],
            "url"   : "/articles"
        },
        "files" :            
        {
            "tags"  : ["people"],
            "url"   : "/events"
        }
    },
    
    "modules" :
    {
        
        "enabled" : ["dojo_toolkit", "loader", "tinymce", "view_list"],

        "dojo_toolkit" :
        {
            "null"      : "none"
        },
        
        "tinymce" :
        {
            "theme"     : "modern"
        },
        
        "loader" :
        {
            "speed"     : 400
        },
        "disqus" :
        {
            "shortname" : "thoughtpivot"
        },
        
        "view_list" :
        {
            "navigation" : "normal"
        }
    },

    "extensions" :
    {
        "enabled" : ["example"],
        
        "example" :            
        {
            "key" : "value"
        }
    }
}
