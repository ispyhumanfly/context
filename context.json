{ 
    "title"                 : "Context",
    "description"           : "A content management application framework.",
    "address"               : "context.thoughtpivot.com",
    "encoding"              : "UTF-8",
    
    "authorization" :
    {

        "enabled" : ["local_mode"],

        "google_apps" :
        
        {
            "domain"    : "thoughtpivot.com"
        },
        "local_mode" :
        {
            "domain"    : "localhost"
        } 
    },

    "content" :
    {
        "layouts" :
        {
            "enabled" : ["context"],
            
            "context" :
            {
                "title"         : "context",
                "stylesheet"    : "/context.css"
            }
        },
        
        "views" :            
        {
            
            "enabled" : ["articles", "photos", "videos", "shop"],
            
            "articles" :
            {   
                "title" : "Articles",
                "url"   : "/articles",
                "tags"  : ["view=articles", "key=value"],
                "order_by"  : "create_datetime ASC",
                "subtract_day_range"    : 190,
                "template" : "views"
            },
            "photos" :
            {   
                "title" : "Photos",
                "url"   : "/photos",
                "tags"  : ["view=photos", "key=value"],
                "order_by"  : "create_datetime ASC",
                "subtract_day_range"    : 190,
                "template" : "views"
            },
            "videos" :
            {   
                "title" : "Videos",
                "url"   : "/videos",
                "tags"  : ["view=videos", "key=value"],
                "order_by"  : "create_datetime ASC",
                "subtract_day_range"    : 190,
                "template" : "views"
            },
            "shop" :
            {   
                "title" : "Shop",
                "url"   : "/shop",
                "tags"  : ["view=shop", "key=value"],
                "order_by"  : "create_datetime ASC",
                "subtract_day_range"    : 190,
                "template" : "views/view"
            }
        }
    },

    "hypnotoad" :
    {
        "listen"    : ["http://*:8080"],
        "pid_file"  : "context.pid",
        "lock_file" : "context.lock",
        "log_file"  : "context.log",
        "workers"   : "25",
        "proxy"     : 1
    }
}
