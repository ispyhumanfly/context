{ 
    "title"                 : "Context",
    "description"           : "A Modern CMS",
    "domain"                : "context.thoughtpivot.com",
    "temp"                  : "/tmp",
    "photos"                : "/tmp",
    "videos"                : "/tmp",
    "encoding"              : "UTF-8",
    "subtract_day_range"    : 190,
    "add_day_range"         : 90,
    "ad_content"            : "off",
    "stylesheet"            : "context.css",

    "hypnotoad" :
    {
        "listen"    : ["http://*:3233", "https://*:3244"],
        "pid_file"  : "/tmp/context.pid",
        "lock_file" : "/tmp/context.lock",
        "log_file"  : "/tmp/context.log",
        "workers"   : "25",
        "proxy"     : 1
    },
    
    "authorization" :
    {

        "enabled" : ["local_mode"],

        "google_apps" :
        
        {
            "domain"    : "thoughtpivot.com"
        },
        "local_mode" :
        {
            "domain"    : "localhost"
        } 
    },

    "content" :
    {
        "layouts" :
        {
            "enabled" : ["context"],
            
            "context" :
            {
                "title"         : "context",
                "stylesheet"    : "/context.css"
            }
        },
        
        "views" :            
        {
            
            "enabled" : ["articles", "files", "photos", "videos"],
            
            "articles" :
            {   
                "title" : "Articles",
                "url"   : "/articles",
                "tags"  : ["article", "key=value"],
                "order_by"  : "create_datetime ASC",
                "template" : "content"
            },
            "files" :
            {   
                "title" : "Files",
                "url"   : "/files",
                "tags"  : ["file", "key=value"],
                "order_by"  : "create_datetime ASC",
                "template" : "content"
            },
            "photos" :
            {   
                "title" : "Photos",
                "url"   : "/photos",
                "tags"  : ["photo", "key=value"],
                "order_by"  : "create_datetime ASC",
                "template" : "content"
            },
            "videos" :
            {   
                "title" : "Videos",
                "url"   : "/videos",
                "tags"  : ["video", "key=value"],
                "order_by"  : "create_datetime ASC",
                "template" : "content"
            }
        }
    },
    
    "mapping" :
    {
        "enabled" : ["articles", "events"],
        
        "articles" :            
        {
            "tags"  : ["people"],
            "url"   : "/articles"
        },
        "events" :            
        {
            "tags"  : ["people"],
            "url"   : "/events"
        }
    },
    
    "modules" :
    {
        
        "enabled" : ["ads", "events"],

        "ads" :
        {
            "enabled"   : "false"
        },
        "google_analytics" :
        
        {
            "enabled"   : "true",
            "account"   : "UA-31343777-1",
            "domain"    : "thoughtpivot.com"
        },
        "facebook"  :
        
        {
            "enabled"   : "true",
            "appid"     : "111526485542517",
            "domain"    : "thoughtpivot.com",
            "link"      : "https://www.facebook.com/thoughtpivot"
        },
        "twitter"   :
        
        {
            "enabled"   : "true",
            "domain"    : "thoughtpivot.com",
            "link"      : "https://twitter.com/thoughtpivot"
        },
        "share_this" :
        {
            "enabled"   : "true",
            "publisher" : "094f9b3e-6c2e-4a55-9656-27e04d5b7cc7"
        },
        "disqus" :
        {
            "enabled"   : "true",
            "shortname" : "bennumagazine"
        },
        "tinymce" :
        {
            "enabled"   : "true",
            "theme"     : "modern"
        },
        "dojo_toolkit" :
        {
            "enabled"   : "true",
            "null"      : "none"
        }
    },

    "extensions" :
    {
        "enabled" : ["example"],
        
        "example" :            
        {
            "key" : "value"
        }
    }
}
