<!DOCTYPE html>
<html <%== "xmlns:fb'http://ogp.me/ns/fb#'" if app->config->{modules}->{facebook}->{enabled} eq "true" %> lang="en-US">

    <head>
	
	<meta http-equiv="Content-Type" content="text/html; charset=<%= app->config->{encoding} %>"/> 
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
    
	<title><%= app->config->{title} %> :: <%= title %></title>

	% my $layout = @{app->config->{content}->{layouts}->{enabled}}[0];
	
	% if (exists app->config->{content}->{layouts}->{$layout}) {		
	    <link rel="stylesheet" type="text/css" href="<%= app->config->{content}->{layouts}->{$layout}->{stylesheet} %> ">
	% }
	
	%= include 'modules/google_analytics'

        %= include 'modules/dojo_toolkit'
        
        %= include 'modules/facebook', mode => 'head'
        
        %= include 'modules/tinymce'
	
    </head>

    <body class=nihilo>

	%= include "modules/loader"
	
	<div id=navigation_container>
	    
	    <h1><%= app->config->{title} %></h1>

	    %= include 'modules/view_list'
	     
	</div>
	
	<div id=main_container>
	    
	    <div id=header_container>
		
		%= include "modules/ads"
		
	    </div>
	    
	    <div id=content_container>
		
		%= content
    
	    </div>
    	    
	    <div id=footer_container>
		
		<div id=thoughtpivot>
		    
		    <span class=text>Another</span>
		    <span class=logo>
			<a href="http://thoughtpivot.com" target="_blank">Thoughtpivot</a>
		    </span>
		    <span class=text>Design.</span>
		</div>
		
	    </div>
	    
	    % if ($self->param('message')) {
	    %= include 'modules/content_message', message => $self->param('message') 			
	    % }
	
	</div>

    </body>
</html>
