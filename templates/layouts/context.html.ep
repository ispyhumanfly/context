<!DOCTYPE html>
<html lang="en-US">

    <head>
	
		<meta http-equiv="Content-Type" content="text/html; charset=<%= app->config->{encoding} if exists app->config->{encoding} %>"/> 
		<meta http-equiv="X-UA-Compatible" content="IE=edge">
		
		<title><%= app->config->{title} %> :: <%= title %></title>
	
		% my $layout = @{app->config->{content}->{layouts}->{enabled}}[0];
		
		<link rel="stylesheet" type="text/css" href="<%= app->config->{content}->{layouts}->{$layout}->{stylesheet} if exists app->config->{content}->{layouts}->{$layout} %> ">
		
		%= include "modules/runtime", module => 'mojodojo'
		
    </head>

    <body class=nihilo>
		
		%= include "modules/runtime", module => 'loader'
		
		<div id=navigation_container>
			
			<h1><%= app->config->{title} %></h1>
		
			%= include "modules/runtime", module => 'menu'
		
		</div>
	
		<div id=main_container>
			
			<div id=header_container>
			
			</div>
			
			<div id=content_container>
			
			%= content
		
			</div>
				
			<div id=footer_container>
			
				<div id=thoughtpivot>
					
					<span class=text>A</span>
					<span class=logo>
					<a href="http://thoughtpivot.com" target="_blank">Thoughtpivot</a>
					</span>
					<span class=text>Inception.</span>
				</div>
			
			</div>
		</div>
    </body>
</html>
